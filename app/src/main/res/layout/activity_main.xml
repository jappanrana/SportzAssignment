<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeScreenHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_rectangle_header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/homeScreenHeaderTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeScreenHeaderStatic"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeScreenHeaderStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:text="@string/vs"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeScreenHeaderTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/homeScreenHeaderStatic"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeScreenDetails2Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/circular_rectangle_bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeScreenHeader"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/homeScreenLeague"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="viewEnd"
            android:textSize="22sp"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeScreenType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="viewStart"
            android:textSize="22sp"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeScreenMatchNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeScreenLeague"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/homeScreenTeam1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeScreenMatchNumber"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/homeScreenTeam2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeScreenMatchNumber"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/homeScreenStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeScreenTeam1Name"
            app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/homeScreenTourName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/homeScreenVenueName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/homeScreenVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeScreenDetails1Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circular_rectangle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/homeScreenDetails2Layout"
        app:layout_constraintDimensionRatio="20:8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeScreenHeader"
        app:layout_constraintVertical_bias="0.060000002"
        app:layout_constraintWidth_percent="0.4">

        <TextView
            android:id="@+id/homeScreenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeScreenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeScreenDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeScreenTeamButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circular_rectangle_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeScreenDetails2Layout"
        app:layout_constraintWidth_percent="0.6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/color1"
            android:text="View Details"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>